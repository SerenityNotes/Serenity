{
  "name": "backend",
  "version": "1.0.0",
  "scripts": {
    "dev": "yarn prisma migrate dev && ts-node-dev --transpile-only --no-notify ./src/index.ts",
    "dev:e2e": "(export PORT=4001; export POSTGRES_URL=postgres://prisma:prisma@localhost:5432/serenity_e2e_tests; yarn prisma migrate dev && ts-node-dev --transpile-only --no-notify ./src/index.ts)",
    "dev:mock": "yarn && yarn prisma generate && MOCK_GRAPHQL=true ts-node-dev --transpile-only --no-notify ./src/index.ts",
    "clean": "rm -rf build",
    "build": "yarn && yarn clean && yarn prisma:prod:generate && yarn ncc build ./src/index.ts -o build --external \"@serenity-tools/opaque-server\" && yarn build:copy-externals",
    "build:copy-externals": "mkdir node_modules/@serenity-tools && cp -r ../../packages/opaque-server ./node_modules/@serenity-tools/opaque-server",
    "deploy": "yarn build && DOCKER_DEFAULT_PLATFORM=linux/amd64 heroku container:push web --app serenity-staging-api && heroku container:release web --app serenity-staging-api",
    "prisma:prod:migrate": "POSTGRES_URL=$POSTGRES_URL prisma migrate deploy",
    "prisma:prod:generate": "POSTGRES_URL=$POSTGRES_URL prisma generate",
    "prisma:prod:studio": "POSTGRES_URL=$POSTGRES_URL prisma studio",
    "prisma:test:studio": "POSTGRES_URL=postgres://prisma:prisma@localhost:5432/serenity_test prisma studio",
    "start:prod": "PORT=$PORT POSTGRES_URL=$POSTGRES_URL NODE_ENV=production node ./build",
    "start:e2e": "export $(cat .e2e-tests.env | xargs) && yarn prisma migrate dev && node ./build",
    "ts:check": "yarn tsc --noEmit",
    "test:e2e": "POSTGRES_URL=postgres://prisma:prisma@localhost:5432/serenity_e2e_tests npx playwright test",
    "test:e2e:headed": "POSTGRES_URL=postgres://prisma:prisma@localhost:5432/serenity_e2e_tests npx playwright test --headed",
    "test": "jest --runInBand",
    "lint": "eslint --ext .tsx --ext .ts ./"
  },
  "dependencies": {
    "@naisho/core": "*",
    "@prisma/client": "^4.3.0",
    "@serenity-tools/common": "*",
    "@serenity-tools/opaque-server": "*",
    "apollo-server-express": "^3.10.2",
    "canonicalize": "^1.0.8",
    "express": "^4.18.1",
    "graphql": "^16.6.0",
    "libsodium-wrappers": "^0.7.10",
    "make-promises-safe": "^5.1.0",
    "nexus": "^1.1.0",
    "uuid": "^8.3.2",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.25.1",
    "@types/libsodium-wrappers": "^0.7.9",
    "@types/node": "16.11.9",
    "@types/uuid": "^8.3.3",
    "@types/ws": "^8.2.1",
    "@vercel/ncc": "^0.34.0",
    "dotenv": "^16.0.2",
    "eslint": "^8.23.0",
    "graphql-request": "^5.0.0",
    "jest": "^29.0.1",
    "prisma": "^4.3.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.2"
  },
  "jest": {
    "globalSetup": "<rootDir>/test/config/jestGlobalSetup.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/test/config/jestTestSetup.ts"
    ],
    "transform": {
      "\\.tsx?$": [
        "babel-jest",
        {
          "configFile": "./.babelrc.jest.js"
        }
      ]
    }
  }
}
