{
  "name": "serenity",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "setup:editor": "cd ../../packages/editor && yarn build && cd -",
    "setup": "yarn && yarn setup:editor",
    "dev": "yarn setup && NODE_OPTIONS=--openssl-legacy-provider API_URL=http://localhost:4000/graphql npx expo start --dev-client",
    "dev:speed": "NODE_OPTIONS=--openssl-legacy-provider API_URL=http://localhost:4000/graphql npx expo start --dev-client",
    "dev:staging": "yarn setup && NODE_OPTIONS=--openssl-legacy-provider npx expo start --dev-client",
    "dev:e2e": "yarn setup && NODE_OPTIONS=--openssl-legacy-provider SERENITY_ENV=e2e API_URL=http://localhost:4001/graphql npx expo start --web",
    "dev:electron-web": "yarn setup && NODE_OPTIONS=--openssl-legacy-provider API_URL=http://localhost:4000/graphql EXPO_ELECTRON_MODE=true npx expo start --web --dev-client",
    "build:xstate-types": " xstate typegen \"./**/*.ts?(x)\"",
    "build:graphql-types": "graphql-codegen --config codegen.yml",
    "build:web": "yarn setup && NODE_OPTIONS=--openssl-legacy-provider npx expo export:web && cp _redirects ./web-build/_redirects",
    "build:web:e2e": "yarn setup && NODE_OPTIONS=--openssl-legacy-provider SERENITY_ENV=e2e API_URL=http://localhost:4001/graphql npx expo export:web && cp _redirects ./web-build/_redirects",
    "build:electron-web": "yarn setup && NODE_OPTIONS=--openssl-legacy-provider EXPO_ELECTRON_MODE=true npx expo export:web && rm -rf ../desktop-app/src/web-build && mv ./web-build ../desktop-app/src/web-build",
    "start:e2e": "yarn serve web-build --single -p 19006",
    "test": "jest",
    "ts:check": "node ../../add-ts-no-check.js && yarn tsc --noEmit",
    "lint": "eslint --ext .tsx --ext .ts ./"
  },
  "jest": {
    "preset": "jest-expo/web"
  },
