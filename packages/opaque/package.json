{
  "name": "@serenity-tools/opaque",
  "version": "0.0.1",
  "main": "index",
  "scripts": {
    "build": "yarn build:web && yarn build:mobile",
    "build:mobile": "webpack --config webpack.config.mobile-webview.js && cp -r dist/index.html ../../apps/app/webviews/opaque/index.html",
    "build:web": "webpack --config webpack.config.web.js --mode=production && cp -r dist/web ../../apps/app",
    "dev:mobile": "webpack serve --config webpack.config.mobile-webview.js",
    "ts:check": "yarn tsc --noEmit",
    "test": "echo TODO",
    "lint": "eslint --ext .tsx --ext .ts ./"
  },
  "dependencies": {
    "opaque-wasm": "^1.1.0",
    "regenerator-runtime": "^0.13.9",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "babel-loader": "^8.2.3",
    "html-webpack-plugin": "^5.5.0",
    "react-dev-utils": "^12.0.1",
    "typescript": "^4.8.2",
    "webpack-dev-server": "^4.3.1"
  }
}
